<h1>Listing financial_accounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Account type</th>
      <th>Company name</th>
      <th>Balance</th>
      <th>Original balance</th>
      <th>Rate</th>
      <th>Min payment</th>
      <th>Actual payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @financial_accounts.each do |financial_account| %>
      <tr>
        <td><%= financial_account.user_id %></td>
        <td><%= financial_account.account_type_id %></td>
        <td><%= financial_account.company_name %></td>
        <td><%= financial_account.balance %></td>
        <td><%= financial_account.original_balance %></td>
        <td><%= financial_account.rate %></td>
        <td><%= financial_account.min_payment %></td>
        <td><%= financial_account.actual_payment %></td>
        <td><%= link_to 'Show', financial_account %></td>
        <td><%= link_to 'Edit', edit_financial_account_path(financial_account) %></td>
        <td><%= link_to 'Destroy', financial_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

