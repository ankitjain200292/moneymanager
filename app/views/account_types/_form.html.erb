<%= form_for(@account_type) do |f| %>
  <% if @account_type.errors.any? %>
    <div id="error_explanation">
     

      <ul class = 'alert alert-danger'>
         <h5><%= pluralize(@account_type.errors.count, "error") %> prohibited Users registration:</h5>
        <% @account_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
       
    </div>
  <% end %>
  <div class="row">
    <div class="form-group">
      <div class="col-md-12">
        <div class="col-md-8">
          <%= f.label :name %><br>
          <%= f.text_field :name, :class => 'form-control'  %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">

      <%= f.submit 'Create', :class => 'btn btn-default pull-right push-bottom' %>
    </div>
  </div>
<% end %>

